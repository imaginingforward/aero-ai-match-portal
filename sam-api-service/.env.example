# Server Configuration
PORT=3002
NODE_ENV=development

# MongoDB Configuration (not used in Baserow version)
MONGODB_URI=mongodb://localhost:27017/sam-rfp-db

# Data Source Configuration
# Set to 'true' to use sample data instead of calling the SAM.gov API
USE_SAMPLE_DATA=false
# Set to 'true' to generate sample data if the SAM.gov API call fails
FALLBACK_TO_SAMPLE_DATA=true

# Baserow Configuration
BASEROW_API_URL=https://api.baserow.io/api/database/rows/table
BASEROW_API_TOKEN=your_baserow_api_token_here
BASEROW_OPPORTUNITIES_TABLE_ID=your_baserow_table_id_here

# Scheduling Configuration
# Run daily at 2 AM
RFP_FETCH_SCHEDULE=0 2 * * *

# AI Matching Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4.1-nano
MAX_OPPORTUNITIES_TO_PROCESS=20

# API Security
API_KEY=your_service_api_key_here
